:css
  li:nth-child(3).signup-header__nav--list {
    color: #ea352d;
    font-weight: 600;
  }
  li:nth-child(n+1):nth-child(-n+3) .signup-header__nav--status{
    background-color: #ea352d;
  }
  li:nth-child(n+1):nth-child(-n+2) .signup-header__nav--status:after{
    background-color: #ea352d;
  }
  li:nth-child(n+2):nth-child(-n+3) .signup-header__nav--status:before{
    background-color: #ea352d;
  }
.signup-third
  = render 'shared/sign-up-header'
  .third-main
    %section.third-main-wrapper
      .third-main-wrapper__title 発送元・お届け先住所入力
      = form_with class: 'third-main-wrapper__box' do |f|
        .third-main-wrapper__box--inner
          .third-main-wrapper__form-top
            = f.label 'お名前', class: 'third-main-wrapper__form--label'
            %span.third-main-wrapper__form--require 必須
            = f.text_field :last_name, class: 'third-main-wrapper__form--input', placeholder: '例) 山田'
            = f.text_field :first_name, class: 'third-main-wrapper__form--input-margin', placeholder: '例) 彩'
          .third-main-wrapper__form
            = f.label 'お名前カナ', class: 'third-main-wrapper__form--label'
            %span.third-main-wrapper__form--require 必須
            = f.text_field :last_name_kana, class: 'third-main-wrapper__form--input', placeholder: '例) ヤマダ'
            = f.text_field :first_name_kana, class: 'third-main-wrapper__form--input-margin', placeholder: '例) アヤ'
          .third-main-wrapper__form
            = f.label '郵便番号', class: 'third-main-wrapper__form--label'
            %span.third-main-wrapper__form--require 必須
            = f.text_field :adress_number, class: 'third-main-wrapper__form--input', placeholder: '例) 123-4567'
          .third-main-wrapper__form
            = f.label '都道府県', class: 'third-main-wrapper__form--label'
            %span.third-main-wrapper__form--require 必須
            .prefecture-select-wrapper
              .prefecture-select-wrapper__box
                = f.select :prefecture, ["北海道"], {}, {class: 'prefecture-select-wrapper__box--select'}
                = icon 'fas', 'chevron-down', class: 'prefecture-select-wrapper__box--arrow-down'
          .third-main-wrapper__form
            = f.label '市区町村', class: 'third-main-wrapper__form--label'
            %span.third-main-wrapper__form--require 必須
            = f.text_field :adress_ku, class: 'third-main-wrapper__form--input', placeholder: '例) 横浜市緑区'
          .third-main-wrapper__form
            = f.label '番地', class: 'third-main-wrapper__form--label'
            %span.third-main-wrapper__form--require 必須
            = f.text_field :password_confirmation, class: 'third-main-wrapper__form--input', placeholder: '例) 青山1-1-1'
          .third-main-wrapper__form
            = f.label '建物名', class: 'third-main-wrapper__form--label'
            %span.third-main-wrapper__form--option 任意
            = f.text_field :building_name, class: 'third-main-wrapper__form--input', placeholder: '例) 柳ビル103'
          .third-main-wrapper__form
            = f.label '電話', class: 'third-main-wrapper__form--label'
            %span.third-main-wrapper__form--option 任意
            = f.phone_field :phone, class: 'third-main-wrapper__form--input', placeholder: '09012345678'
          = f.submit '次へ進む', class: 'third-main-wrapper__form--btn'
  = render 'shared/user-footer'