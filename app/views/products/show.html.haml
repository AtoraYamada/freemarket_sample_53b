.wrapper3

  = render 'layouts/header'

  %section.item-container1
    %h1.item-container1__item-seller_name
      = @product.product_name
    .item-container1__item-content
      .content--photo
        .content--photo_up photo up
        -# TODO: アクティブストレージと呼び出し方が違う為出品機能実装後に記述する
        -# = image_tag @product.photo
        .content--photo_down photo down
      %table.content--detail-table
        %tbody.table
          %tr.table--section
            %th.table--section-left 出品者
            %th.table--section-right
            -# TODO: userが設定されていない為、user設定後に記述する
              -# = link_to "#{@product.user.nickname}", ""
          %tr.table--section
            %th.table--section-left カテゴリー
            %th.table--section-right
              = @product.category_id
          %tr.table--section
            %th.table--section-left ブランド
            %th.table--section-right
              = @product.brand_id
          %tr.table--section
            %th.table--section-left 商品状態
            %th.table--section-right
              = @product.product_status
          %tr.table--section
            %th.table--section-left 配送料負担
            %th.table--section-right
              = @product.delivery_charge
          %tr.table--section
            %th.table--section-left 配送方法
            %th.table--section-right
              = @product.delivery_method
          %tr.table--section
            %th.table--section-left 配送元
            %th.table--section-right
              = @product.delivery_area
          %tr.table--section
            %th.table--section-left 配送日目安
            %th.table--section-right
              = @product.delivery_days

    .item-container1__item-price
      %span.item-container1__item-price-bold
        ¥
        = @product.price
      %span.item-container1__item-price-tax (税込)
      %span.item-container1__item-price-shipping-fee 送料込み
    .item-container1__item-buy-btn 購入画面に進む
    .item-container1__item-description 
      %p.item-description-inner
        = @product.product_introduction
    .item-container1__item-other-btn.clearfix
      .link_btn_left
        %button.item-other-btn-left いいね！
      .link_btn_right
        %i.fa.fa-lock
        = link_to '安心安全への取り組み', root_path, class: 'item-other-btn-right'

  .item-comment-area
    In here,communicate each other.//
    In here,communicate each other.//
    In here,communicate each other.//
    In here,communicate each other.//
    In here,communicate each other.//
    In here,communicate each other.//
    In here,communicate each other.//
  %ul.item-nav.clearfix
    %li.item-nav__link
      = link_to '< Preview product', root_path, class: 'item-nav__link-prev'
      = link_to 'Next product >', root_path, class: 'item-nav__link-next'
  .sns
    %ul.sns--aikon
      %i.fab.fa-facebook-square
      %i.fab.fa-twitter-square
      %i.fab.fa-pinterest
  .item-others
    %section.item-others--seller
      %h2.item-others--seller_name 出品者のその他の商品
      .item-others--seller_product.clearfix

        .item-others--seller_product_box
          .items-box_photo
          .items-box_body
            %h3.items-box-name
              = @product.product_name
            .items-box-num
              .items-box-price
                ¥
                = @product.price
              .items-box-icon
                %i.far.fa-heart
                0
            -# .items-box-tax   本番では税は非表示 以下同じ箇所も同様
            -#   (税込)           何かの時に記録として残す
        .item-others--seller_product_box
          .items-box_photo
          .items-box_body
            %h3.items-box-name
              = @product.product_name
            .items-box-num
