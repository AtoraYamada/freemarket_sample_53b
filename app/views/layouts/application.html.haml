!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title FreemarketSample53b
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    %wrapper
      .header
        .header-inner
          %ul.header-top
            %li.logo
              = image_tag "/2019-06-23 17.04.26.png", size: "150x50"
            %li.form
              = form_with id: "form", url:'/#', method: :get do |f|
                = f.text_field :search, class: "search", placeholder: ' 何かお探しですか？'
                .image-label#sbtn
                  =f.label  class: "submit" do
                    = f.button "", class:"fas fa-search fa-lg", value: "&#xf002;"
                        

          .header-bottom
            %ul.header-bottom__left
              %li.category
                .category__icon
                  %i.fas.fa-list-ul
                .category__search
                  カテゴリーから探す
              %li.brand
                .brand__icon
                  %i.fas.fa-tag.fa-spin
                .brand__search
                  ブランドから探す
            %ul.header-bottom__right
              %li.liked-item
                = link_to "/" do
                  %i.far.fa-heart.fa-lg
                    .header-bottom__right__text
                      いいね！一覧
              %li.notification-list
                = link_to "/" do
                  %i.far.fa-bell.fa-lg
                  .header-bottom__right__text
                    お知らせ
              %li.todo-list
                = link_to "/" do
                  %i.fas.fa-check.fa-lg
                  .header-bottom__right__text
                    やることリスト
              %li.my-page
                = link_to "/", class: "my-page__link" do
                  = image_tag "/member_photo_noimage_thumb.png", size: "30x30"
                  .my-page__text
                    .header-bottom__right__text
                      マイページ
      = yield
      .hooter
        .hooter-top
          = image_tag "/hooter-background-image.png", size: "1400x300",class: "hooter-image"
          .hooter-top-inner
            .hooter-top-inner__right
              #h2　スマホでかんたんフリマアプリ

            .hooter-top-inner__left

        .hooter-bottom
          .footer-cell
            %p こんにちは
          .footer-cell
            %p こんにちは
          .footer-cell
            %p こんにちは
          .footer-cell
            %p こんにちは
